rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function currentUserDocRef() {
      return /databases/$(database)/documents/users/$(request.auth.uid);
    }

    match /ride/{document} {
      allow create: if isSignedIn() &&
        request.resource.data.PassengerId == currentUserDocRef();
      allow read: if true;
      allow update: if isSignedIn() &&
        resource.data.PassengerId == currentUserDocRef();
      allow delete: if false;
    }

    match /users/{userId} {
      allow create: if request.auth.uid == userId;
      allow read: if request.auth.uid == userId;
      allow write: if request.auth.uid == userId;
      allow delete: if request.auth.uid == userId;

      match /saved_places/{placeId} {
        allow create, read, update, delete: if request.auth != null &&
          request.auth.uid == userId;
      }
    }

    match /RideVariables/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if false;
      allow delete: if false;
    }

    match /driver/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if false;
      allow delete: if false;
    }

    match /passenger/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if false;
      allow delete: if false;
    }
  }
}
